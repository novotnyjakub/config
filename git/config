[core]
	excludesfile = ~/.config/git/ignore_global
	pager = less -F -X
[alias]
    s = status
	st = status
	dst = status -- .
    d = diff
	co = checkout
	c = commit
	br = branch
	sta = stash
	llog = log --date=local

# Fancy logging.
    #   h = head
    #   hp = head with patch
    #   r = recent commits, only current branch
    #   ra = recent commits, all reachable refs
    #   l = all commits, only current branch
    #   la = all commits, all reachable refs
    head = !git l -1
    h = !git head
    hp = "!. ~/.config/git/helpers && show_git_head"
    r = !git l -30
    ra = !git r --all
    l = "!. ~/.config/git/helpers && pretty_git_log"
    la = !git l --all
[apply]
	whitespace = nowarn
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
[branch]
    autosetupmerge = true
[merge]
    conflictstyle = diff3
[push]
    default = simple
[fetch]
    prune = true
